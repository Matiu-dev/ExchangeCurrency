docker run --name pgadmin -d -p 5050:80 --network=NBP-APP
-e PGADMIN_DEFAULT_EMAIL="admin@admin.com"
-e PGADMIN_DEFAULT_PASSWORD="admin"  dpage/pgadmin4

docker service create --name pgadmin -p 5050:80 --network="NBP-APP" -e PGADMIN_DEFAULT_EMAIL="admin@admin.com" -e PGADMIN_DEFAULT_PASSWORD="admin" dpage/pgadmin4
===================================================================================
./mvnw package
docker build -f src/main/docker/Dockerfile.jvm -t nbp-app .
docker run --name NBP-APP -i -p 8080:8080 --network=NBP-APP nbp-app

docker service create --name NBP-APP -p 8080:8080 --network=NBP-APP nbp-app
